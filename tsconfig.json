{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES2018", "DOM"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noEmitHelpers": false,
    "importHelpers":  true,
    "noResolve": false,
    "noEmit": false,
    "declarationDir": "dist/types",
    "outDir": "compiled",
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src"]
}
